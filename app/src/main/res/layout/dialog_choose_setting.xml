<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/txvTitleDialogS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/primary_color"
        android:text="Pilih BBM"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_lef_right_dialog"
        android:layout_marginRight="@dimen/margin_lef_right_dialog"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/lnrDialogContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txvTitleDialogS"
        android:layout_marginLeft="@dimen/margin_lef_right_dialog"
        android:layout_marginRight="@dimen/margin_lef_right_dialog"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>