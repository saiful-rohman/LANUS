<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnrRouteContent"
    android:orientation="vertical"
    android:visibility="gone">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardcorner_route"
        android:layout_marginLeft="@dimen/margin_left_right_route_layer_map"
        android:layout_marginRight="@dimen/margin_left_right_route_layer_map">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginLeft="@dimen/margin_left_right_route_layer_map_content"
            android:layout_marginRight="@dimen/margin_left_right_route_layer_map_content"
            android:paddingTop="@dimen/padding_top_bottom_route_layer_map"
            android:paddingBottom="@dimen/padding_top_bottom_route_layer_map">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Input Perkiraan Kecepatan"
                    android:textSize="@dimen/font_size_14"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Knot (1.85km/jam)"
                    android:textSize="@dimen/font_size_14"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnDeleteLastPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hapus Titik Terakhir"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgCloseRouteLayer"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:src="@drawable/close"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:padding="17dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/cardcorner_route"
        android:layout_marginLeft="@dimen/margin_left_right_route_layer_map"
        android:layout_marginRight="@dimen/margin_left_right_route_layer_map">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_left_right_route_layer_map_content"
            android:layout_marginRight="@dimen/margin_left_right_route_layer_map_content"
            android:paddingTop="@dimen/padding_top_bottom_route_layer_map"
            android:paddingBottom="@dimen/padding_top_bottom_route_layer_map">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="9"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jarak Tempuh"
                    android:layout_weight="3"
                    android:textSize="@dimen/font_size_14"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waktu Tempuh"
                    android:layout_weight="3"
                    android:textSize="@dimen/font_size_14"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BBM Terpakai"
                    android:layout_weight="3"
                    android:textSize="@dimen/font_size_14"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvMIleage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0,00 KM"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txvTravelingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txvUsedBBM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0,00 Liter"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardcorner_route"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:layout_marginLeft="@dimen/margin_left_right_route_layer_map"
        android:layout_marginRight="@dimen/margin_left_right_route_layer_map">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_left_right_route_layer_map_content"
            android:layout_marginRight="@dimen/margin_left_right_route_layer_map_content"
            android:paddingTop="@dimen/padding_top_bottom_route_layer_map"
            android:paddingBottom="@dimen/padding_top_bottom_route_layer_map">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mesin"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/txvEngine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/txvHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bearing"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/txvBearing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahan Bakar"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/txvFuel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OCTANE_87"
                    android:textSize="@dimen/font_size_14"
                    android:layout_weight="5"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>